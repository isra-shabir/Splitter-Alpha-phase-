<div class="jumbotron">
  <% if member_signed_in? %>
    <h1>Welcome back, trusted user!</h1>
    <!-- New stuff -->
    <h1>Money Owed to You</h1>
    <table>
      <th>Purchase Name</th>
      <th></th>
      <th></th>
      <th></th>
      <th>Balance</th>
      <% current_member.group_purchases.each do |purchase| %>
        <tr>
          <% if current_member.email == purchase.creatorName%>
            <td><%=purchase.purchaseName%></td>
            <td></td>
            <td></td>
            <td></td>
            <td><%=purchase.balance%></td>
        </tr>
          <%end %>
      <%end%>
    </table>

    <h1>Money You Owe</h1>
    <table>
      <th>Purchase</th>
      <th>Balance</th>
      <th></th>
      <th></th>
      <th></th>
      <% current_member.group_purchases.each do |purchase| %>
        <tr>
          <% if current_member.email != purchase.creatorName%>
            <td><%=purchase.purchaseName%></td>
            <td><%=purchase.balance%></td>
            <td></td>
            <td></td>
            <td></td>
          <%end%>
        </tr>
      <%end%>
    </table>

    <%= link_to "Create New Purchase", new_group_purchase_path%>
    <!-- end of new stuff-->
    <%= link_to "Sign Out", destroy_member_session_path, :method => :delete, :class => 'btn btn-large btn-danger' %>
  <% else %>
    <h1>Welcome, new user!</h1>
    <p class="lead">
      You must sign in or sign up before you can access our super sweet,
      top secret content.
    </p>
    <div class="row-fluid">
      <div class="span6">
        <%= link_to "Sign In", new_member_session_path, :class => "btn btn-success" %>
      </div>
      <div class="span6">
        <%= link_to "Sign Up", new_member_registration_path, :class => "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>