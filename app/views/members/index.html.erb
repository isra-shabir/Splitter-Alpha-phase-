<div class="jumbotron">
  <% if member_signed_in? %>
    <h1>Welcome back, trusted user!</h1>
    <p class="lead">
      <h1>Members#index</h1>
		<p>Find me in app/views/members/index.html.erb</p>
    </p>
    <%= link_to "Sign Out", destroy_member_session_path, :method => :delete, :class => 'btn btn-large btn-danger' %>
  <% else %>
    <h1>Welcome, new user!</h1>
    <p class="lead">
      You must sign in or sign up before you can access our super sweet,
      top secret content.
    </p>
    <div class="row-fluid">
      <div class="span6">
        <%= link_to "Sign In", new_member_session_path, :class => "btn btn-success" %>
      </div>
      <div class="span6">
        <%= link_to "Sign Up", new_member_registration_path, :class => "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>